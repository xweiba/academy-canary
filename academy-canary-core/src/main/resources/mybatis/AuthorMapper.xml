<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ptteng.academy.persistence.mapper.AuthorMapper">
    <select id="findById" parameterType="Long" resultType="author">
        SELECT
        au.*
        FROM
        author au
        WHERE au.id = #{id}
    </select>
</mapper>

